<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8"/>
		<link rel="stylesheet" href="bulma.min.css">
		<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"> </script>
	</head>
	<body>
		<section class="section">
			<div class="maincolumns columns is-desktop is-vcentered">
				<div class="column is-10 is-offset-1 notification is-info is-light box container">
					<div class="title">
						Restaurants
					</div>
					<% if (locals.allUsers) { %>
						<div class="table-container">
						<table class="table is-bordered is-hoverable is-striped is-narrow">
							<thead>
							<tr>
								<th> Restaurant ID </th>
								<th> Restaurant Name </th>
								<th> Restaurant Description </th>
								<th> Delete Restaurant </th>
								<th> &nbsp; </th>
							</tr>
							</thead>
							<% let i=0; %>
							<% for(i=0; i < allUsers.length; i++) { %>
								<tr>
									<td><%= allUsers[i].restaurant_id %></td>
									<td><%= allUsers[i].name %><a href="/review/<%= allUsers[i].restaurant_id %>"></a><i class="fa-solid fa-star"></i></a></td>
									<td><%= allUsers[i].description %></td>
									<td><a href="/deleteUser?id=<%= allUsers[i].restaurant_id %>">
										<span class="icon is-small">
											<i class="fas fa-user-times"></i>
										</span></a>
									</td>
								</tr>
							<% } %>
							<tfoot>
								<tr> <td colspan="4">
								There are <%= i %> restaurants.
								</td> </tr>
							</tfoot>
						</table>
						</div>
					<% } %>
				</div>
			</div>
		</section>
	</body>
</html>
